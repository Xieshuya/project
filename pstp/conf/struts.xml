<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>

	<!-- 指定为开发模式（默认值为false） -->
	<constant name="struts.devMode" value="true" />

	<!-- 指定主题使用simple（默认值为xhtml） -->
	<constant name="struts.ui.theme" value="simple" />

	<!-- 开启静态方法使用功能 -->
	<constant name="struts.ognl.allowStaticMethodAccess" value="true" />

	<constant name="struts.multipart.maxSize" value="524288000" />

	<include file="com/pstp/system/action/system.xml"></include>
	
	<include file="com/pstp/trainingScheme/schemeList/action/schemeList.xml"></include>
	
	<include file="com/pstp/trainingScheme/makeScheme/action/makeScheme.xml"></include>
	
	<include file="com/pstp/knowledgeRepository/knowledgeManagement/action/knowledgeManagement.xml"></include>

	<include file="com/pstp/knowledgeRepository/knowledgeBase/action/knowledgeBase.xml"></include>
</struts>